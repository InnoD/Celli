<script>
  var ul_len = $(".nav-ul li").children().length;
  var index;

  $(document).ready( function(){
    var winWidth = $(window).width(),
        constWinHeight = $(window).height(),
        videoHeight = constWinHeight,
        videoWidth = constWinHeight * (854/480),
        videoLeft = (winWidth - videoWidth) / 2,
        videoTop = 0;
    if (videoWidth < winWidth) {
      videoHeight = winWidth * (480/854);
      videoWidth = winWidth;
      videoLeft = 0;
      videoTop = (constWinHeight - videoHeight);
    }

    $('#splash-container').css({
      width: '100%',
      height: constWinHeight
    });
    $('#video').hide();
    $('#mini-title').hide();

    /*--- Nav Show/Hide ------------------------------------------------------*/
    var main_nav_show = function () {
      console.log('show')
      $('#splash-menu').stop().fadeOut('fast');
      $('#main-nav').animate({
        top: 0
      }, { duration: 200, queue: false });
    }
    var main_nav_hide = function () {
      console.log('hide')
      $('#splash-menu').stop().fadeIn('fast');
      $('#main-nav').animate({
        top: -70
      }, { duration: 200, queue: false });
    }
    var main_nav_active = false;
    $(document).scroll( function() {
      var scrollY = $(document).scrollTop();
      if (scrollY > (constWinHeight/2)) {
        if (main_nav_active) {
          return;
        }
        main_nav_active = true;
        main_nav_show();
      } else {
        if (!main_nav_active) {
          return;
        }
        main_nav_active = false;
        main_nav_hide();
      }
    });
    /*------------------------------------------------------------------------*/

    $(window).resize( function() {
      var resizeWinWidth = $(window).width(),
          videoLeft = (resizeWinWidth - videoWidth) / 2;
      if (videoWidth < resizeWinWidth) {
        videoHeight = resizeWinWidth * (480/854);
        videoWidth = resizeWinWidth;
        videoLeft = 0;
        videoTop = (constWinHeight - videoHeight);
      }
      $('#mini-title').css({
          'font-size': resizeWinWidth * (15/1920) + 'em'
      }).promise().done(function () {
        titleWidth = $('#mini-title').width();
        titleHeight = $('#mini-title').height();
        $('#mini-title').css({
            left: (resizeWinWidth - titleWidth) / 2,
            top: (constWinHeight - titleHeight) / 2 - 90
        });
      });
      $('#video').css({
        width: videoWidth,
        height: videoHeight,
        left: videoLeft,
        top: videoTop
      });
    });

    setTimeout(function(){ 
      $(window).trigger('resize');
      $('#mini-title').add('#video').fadeIn('slow');
    }, 250);
  });


  $("#main-nav li a").click(function () {
     var title = $(this).text();
     History.pushState({state: this.href}, title, this.href);
     return false;
  });

  History.Adapter.bind(window, 'statechange' ,function() {
    var state = History.getState();
    var scrollPos = $(document).scrollTop();
    $('#ajax-body-wrapper').load(state.cleanUrl + ' #ajax-body-wrapper > *', function() {
      $(document).scrollTop(scrollPos);
    });
  });


</script>
<script src="//vjs.zencdn.net/4.4/video.js"></script>